{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "image-compressor",
  "version": "0.1.0",
  "identifier": "com.anttipynnonen.image-compressor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "image-compressor",
        "width": 800,
        "height": 600,
        "maximized": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/ikoniexp@2x.png",
      "icons/ikoniexp@2x.icns",
      "icons/ikoniexp@2x.ico"
    ]
  }
}